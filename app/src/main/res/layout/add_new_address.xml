<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/lin_lay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        android:orientation="vertical">

        <include layout="@layout/custom_toolbar" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorWhite"
            android:overScrollMode="never"
            android:layout_marginBottom="@dimen/margin_bottom_30dp"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/margin_5dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="@string/save_delivery_location"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/size_titles_20sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_5dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin_5dp"
                        android:fontFamily="@font/montserrat_regular"
                        android:text="@string/name"
                        android:textColor="@color/colorAddAddress"
                        android:textSize="@dimen/size_titles_18sp" />

                    <EditText
                        android:id="@+id/et_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin_5dp"
                        android:background="@null"
                        android:inputType="textPersonName"
                        android:fontFamily="@font/montserrat_regular"
                        android:layout_weight="1"
                        android:textColor="@color/colorAddForm"
                        android:textSize="@dimen/size_titles_18sp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_margin="@dimen/margin_5dp"
                        android:background="@color/colorBorder" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_5dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin_5dp"
                        android:fontFamily="@font/montserrat_regular"
                        android:text="@string/address"
                        android:textColor="@color/colorAddAddress"
                        android:textSize="@dimen/size_titles_18sp" />

                    <EditText
                        android:id="@+id/et_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin_5dp"
                        android:background="@null"
                        android:inputType="text"
                        android:fontFamily="@font/montserrat_regular"
                        android:layout_weight="1"
                        android:textColor="@color/colorAddForm"
                        android:textSize="@dimen/size_titles_18sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_margin="@dimen/margin_5dp"
                        android:background="@color/colorBorder" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_5dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin_5dp"
                        android:fontFamily="@font/montserrat_regular"
                        android:text="@string/landmark"
                        android:textColor="@color/colorAddAddress"
                        android:textSize="@dimen/size_titles_18sp" />

                    <EditText
                        android:id="@+id/et_landmark"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin_5dp"
                        android:inputType="text"
                        android:background="@null"
                        android:fontFamily="@font/montserrat_regular"
                        android:layout_weight="1"
                        android:textColor="@color/colorAddForm"
                        android:textSize="@dimen/size_titles_18sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_margin="@dimen/margin_5dp"
                        android:background="@color/colorBorder" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_5dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin_5dp"
                        android:fontFamily="@font/montserrat_regular"
                        android:text="@string/city"
                        android:textColor="@color/colorAddAddress"
                        android:textSize="@dimen/size_titles_18sp" />

                    <EditText
                        android:id="@+id/et_city"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin_5dp"
                        android:inputType="text"
                        android:background="@null"
                        android:fontFamily="@font/montserrat_regular"
                        android:layout_weight="1"
                        android:textColor="@color/colorAddForm"
                        android:textSize="@dimen/size_titles_18sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_margin="@dimen/margin_5dp"
                        android:background="@color/colorBorder" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_5dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin_5dp"
                        android:fontFamily="@font/montserrat_regular"
                        android:text="@string/email_id"
                        android:textColor="@color/colorAddAddress"
                        android:textSize="@dimen/size_titles_18sp" />

                    <EditText
                        android:id="@+id/et_mail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin_5dp"
                        android:background="@null"
                        android:inputType="textEmailAddress"
                        android:fontFamily="@font/montserrat_regular"
                        android:layout_weight="1"
                        android:textColor="@color/colorAddForm"
                        android:textSize="@dimen/size_titles_18sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_margin="@dimen/margin_5dp"
                        android:background="@color/colorBorder" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_5dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin_5dp"
                        android:fontFamily="@font/montserrat_regular"
                        android:text="@string/mobile_number"
                        android:textColor="@color/colorAddAddress"
                        android:textSize="@dimen/size_titles_18sp" />

                    <EditText
                        android:id="@+id/et_mobile_num"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin_5dp"
                        android:background="@null"
                        android:inputType="numberDecimal"
                        android:fontFamily="@font/montserrat_regular"
                        android:layout_weight="1"
                        android:textColor="@color/colorAddForm"
                        android:textSize="@dimen/size_titles_18sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_margin="@dimen/margin_5dp"
                        android:background="@color/colorBorder" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_10dp">

                    <Button
                        android:id="@+id/saveaddress"
                        android:layout_width="match_parent"
                        android:layout_height="50sp"
                        android:background="@drawable/fulbuttonborder"
                        android:fontFamily="@font/montserrat_regular"
                        android:text="@string/save_address"
                        android:textAllCaps="false"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/size_titles_20sp" />

                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>