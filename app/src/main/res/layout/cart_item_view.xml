<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_cart_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_5dp"
    app:cardCornerRadius="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        android:orientation="vertical"
        android:padding="@dimen/padding_5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/item_img"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:scaleType="fitXY"
                android:src="@mipmap/product_img1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/margin_3dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/item_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/montserrat_regular"
                        android:maxLines="1"
                        android:text="ROYAL BOX MEDIUM"
                        android:textAllCaps="true"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/size_titles_14sp" />

                    <TextView
                        android:id="@+id/item_brand_type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:alpha="0.6"
                        android:fontFamily="@font/montserrat_regular"
                        android:maxLines="1"
                        android:text="Godiva"
                        android:textAllCaps="true"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/size_titles_14sp" />

                    <LinearLayout
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/price_type_offer"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/montserrat_regular"
                                android:text="SAR"
                                android:textColor="@color/colorPrimary"
                                android:textSize="@dimen/size_titles_14sp" />

                            <TextView
                                android:id="@+id/price_offer"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/montserrat_regular"
                                android:text="530"
                                android:textColor="@color/colorPrimary"
                                android:textSize="@dimen/size_titles_14sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/basic_price"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/pdt_multiply"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:fontFamily="@font/montserrat_regular"
                                android:gravity="center"
                                android:text="X"
                                android:textColor="@color/colorPrimary"
                                android:textSize="@dimen/size_titles_14sp" />

                            <TextView
                                android:id="@+id/pdt_num"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/montserrat_regular"
                                android:text="5"
                                android:textColor="@color/colorPrimary"
                                android:textSize="@dimen/size_titles_14sp" />

                        </LinearLayout>


                    </LinearLayout>
                </LinearLayout>

                <ImageView
                    android:id="@+id/cancel_item"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_margin="@dimen/margin_5dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/close_ic" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/qty"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="@font/montserrat_regular"
                android:gravity="center"
                android:text="@string/quantity"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/size_titles_14sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <TextView
                    android:id="@+id/decrement"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:fontFamily="@font/montserrat_medium"
                    android:gravity="center"
                    android:text="-"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/size_titles_20sp" />

                <TextView
                    android:id="@+id/result"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_regular"
                    android:gravity="center"
                    android:text="02"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/size_titles_20sp" />

                <TextView
                    android:id="@+id/increment"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:fontFamily="@font/montserrat_medium"
                    android:gravity="center"
                    android:text="+"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/size_titles_20sp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>