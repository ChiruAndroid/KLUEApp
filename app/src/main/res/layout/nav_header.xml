<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/headerView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@mipmap/headerbackground"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/margin_bottom_30dp"
    android:paddingLeft="@dimen/margin_left_20dp"
    android:paddingRight="@dimen/margin_right_20dp"
    android:paddingTop="@dimen/margin_top_30dp"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">


    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="80dp"
        android:layout_height="80dp"
        card_view:cardBackgroundColor="@android:color/transparent"
        card_view:cardCornerRadius="25dp"
        card_view:cardElevation="0dp"
        card_view:contentPadding="0dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/nav_profile_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:alpha="0.8"
            android:src="@mipmap/profile_img" />

    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/margin_15dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/nav_profile_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_regular"
            android:text="Hi Jhon Snow!"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/size_titles_16sp" />

    </LinearLayout>

</LinearLayout>