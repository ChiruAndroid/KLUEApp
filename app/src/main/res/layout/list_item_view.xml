<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="0dp"
    android:gravity="center"
    android:layout_weight="1"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/menu_item_"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginTop="@dimen/margin_top_5dp"
        android:elevation="0dp"
        android:gravity="center">

        <TextView
            android:id="@+id/menu_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="@dimen/padding_10dp"
            android:fontFamily="@font/montserrat_regular"
            android:maxLines="1"
            android:text="Occasions"
            android:textColor="#575757"
            android:textSize="@dimen/size_titles_14sp" />

        <ImageView
            android:id="@+id/menu_item_img"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:padding="@dimen/padding_5dp"
            android:scaleType="fitXY"
            android:src="@mipmap/next_arrow" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="#1c000000" />
</LinearLayout>