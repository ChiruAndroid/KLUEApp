<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lin_lay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <include layout="@layout/custom_toolbar" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rview_myAddress"
        android:layout_width="match_parent"
        android:layout_margin="@dimen/margin_5dp"
        android:layout_height="match_parent"
        android:layout_below="@+id/header"
        android:layout_weight="1"
        android:overScrollMode="never" />

    <LinearLayout
        android:id="@+id/addnewaddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:layout_margin="@dimen/margin_bottom_10dp"
        android:gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/padding_10dp"
            android:background="@drawable/fulbuttonborder"
            android:fontFamily="@font/montserrat_regular"
            android:text="@string/add_new_address"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/size_titles_20sp" />
        <!--<TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_right_10dp"
            android:layout_weight="1"
            android:fontFamily="@font/montserrat_regular"
            android:text="@string/add_new_address"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/size_titles_20sp" />
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="fitXY"
            android:src="@drawable/next_arrow_white" />-->
    </LinearLayout>

    <include layout="@layout/bottom_layout" />


</LinearLayout>